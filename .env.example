# =============================================================================
# EARTHQUAKE CATALOGUE PLATFORM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.local for development or .env for production
# Variables marked with [REQUIRED] must be set for the application to function
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------

# [REQUIRED] MongoDB Connection URI
# For local development:
MONGODB_URI=mongodb://localhost:27017
# For MongoDB Atlas (recommended for production):
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# [OPTIONAL] Override database name
# If not set, the database name is extracted from MONGODB_URI or defaults to 'earthquake_catalogue'
MONGODB_DATABASE=earthquake_catalogue

# -----------------------------------------------------------------------------
# APPLICATION CONFIGURATION
# -----------------------------------------------------------------------------

# [REQUIRED for production] Node environment
# Values: development, production, test
NODE_ENV=development

# [OPTIONAL] Application port
# Default: 3000
PORT=3000

# -----------------------------------------------------------------------------
# AUTHENTICATION (NextAuth.js)
# -----------------------------------------------------------------------------

# [REQUIRED] Secret key for JWT signing and encryption
# CRITICAL: Use a strong, random string of at least 32 characters
# Generate with: openssl rand -base64 32
# NEVER commit this value to version control
NEXTAUTH_SECRET=your-secret-key-change-me-in-production

# [REQUIRED for production] Full URL of the application
# Used for OAuth callbacks and email links
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXTAUTH_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# EMAIL CONFIGURATION (Optional)
# -----------------------------------------------------------------------------

# [OPTIONAL] Webhook URL for sending password reset emails
# If not configured, password reset emails will be logged to console
# EMAIL_WEBHOOK_URL=https://your-email-webhook.example/send

# [OPTIONAL] SMTP Configuration (alternative to webhook)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASSWORD=your-smtp-password
# SMTP_FROM=noreply@your-domain.com

# -----------------------------------------------------------------------------
# EXTERNAL SERVICES (Optional)
# -----------------------------------------------------------------------------

# [OPTIONAL] GeoNet API configuration
# The GeoNet FDSN Event Web Service is used for importing earthquake data
# Default endpoint is used if not specified
# GEONET_API_URL=https://api.geonet.org.nz/quakeml/1.0.1

# -----------------------------------------------------------------------------
# MONITORING & LOGGING (Optional)
# -----------------------------------------------------------------------------

# [OPTIONAL] Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# [OPTIONAL] Log level
# Values: debug, info, warn, error
# LOG_LEVEL=info

# -----------------------------------------------------------------------------
# SECURITY (Optional)
# -----------------------------------------------------------------------------

# [OPTIONAL] Trusted proxy configuration for rate limiting
# Set to the number of proxies between the user and your server
# TRUSTED_PROXIES=1

# [OPTIONAL] CORS allowed origins (comma-separated)
# CORS_ORIGINS=https://your-frontend.com,https://admin.your-domain.com

# -----------------------------------------------------------------------------
# DEVELOPMENT ONLY
# -----------------------------------------------------------------------------

# [OPTIONAL] Enable debug mode for NextAuth
# NEXTAUTH_DEBUG=true

# [OPTIONAL] Disable SSL verification for local development
# NODE_TLS_REJECT_UNAUTHORIZED=0
